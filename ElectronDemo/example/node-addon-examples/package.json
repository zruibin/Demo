{
  "name": "node-addon-examples",
  "version": "1.0.0",
  "description": "Node.js Addon Examples",
  "main": "test_all.js",
  "scripts": {
    "format": "clang-format -i --glob=*/**/*.{h,cpp,cc}",
    "test": "node test_all.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{h,cpp,cc}": [
      "npm run format",
      "git add"
    ]
  },
  "dependencies": {
    "chalk": "^3.0.0",
    "clang-format": "^1.4.0",
    "semver": "^7.1.3"
  },
  "devDependencies": {
    "husky": "^4.3.0",
    "lint-staged": "^10.5.2"
  }
}
